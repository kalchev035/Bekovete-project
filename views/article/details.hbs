<div class="container body-content">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 well">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{article.title}}</h2>
                </header>

                <p>
                    {{article.content}}
                </p>

                {{#if imagePath}}
                <img src="{{article.imagePath}}" width="350px" alt="Article Image"/>
                {{/if}}

                <small class="author">
                    {{article.author.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                        <a class="btn btn-success btn-xs" href="/article/edit/{{article.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{article.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>