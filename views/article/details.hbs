<div class="container body-content">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 well">
        <div class="col-md-12">
            <article>
                {{#if article.imagePath}}
                    <img src="{{article.imagePath}}" width="350px" class="img-responsive center-block" style="max-width: 100%;" alt="Article Image"/>
                {{/if}}

                <header>
                    <h2>{{article.title}}</h2>
                </header>

                <p class="bekovete">
                    {{article.content}}
                </p>

                <small class="author">
                    Posted by {{article.author.fullName}} on {{article.date}}
                </small>
                <small class="author">
                    {{#if article.editDate}}
                        Last edited on {{article.editDate}}
                    {{/if}}
                </small>

                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                        <a class="btn btn-success btn-xs" href="/article/edit/{{article.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{article.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>