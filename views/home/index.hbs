<div class="container body-content">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1" style="background-color: white;border-style: solid; border-width: 5px; border-radius: 5px;">
        {{#each articles}}
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <p>{{this.content}}
                    </p>

                    <small class="author">
                        {{this.author.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
                <hr>

            </div>
        {{/each}}
    </div>
</div>
